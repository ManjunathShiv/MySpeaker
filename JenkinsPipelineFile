        stage('iOS10 Update TestCases Result') {

        }
      }

      if (env.BRANCH_NAME == 'develop') {
        stage('iOS11 Run TestCases') {

        }

        stage('iOS11 Test Execution Report') {

        }

        stage('iOS11 Update TestCases Result') {

        }
